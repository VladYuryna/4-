#include <iostream>
#include <string>
using namespace std;

// –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–ª—è –æ–¥–Ω–æ–≥–æ –ø–∏—Ç–∞–Ω–Ω—è
struct Question {
    string text;
    string answers[4];
    char correct;
    int reward;
};

int main() {
    // –ú–∞—Å–∏–≤ —Å—Ç—Ä—É–∫—Ç—É—Ä (–ø–∏—Ç–∞–Ω–Ω—è)
    Question quiz[] = {
        {
            "–Ø–∫–∞ –ø–ª–∞–Ω–µ—Ç–∞ 4 –≤—ñ–¥ –°–æ–Ω—Ü—è?",
            {"–∞) –ú–µ—Ä–∫—É—Ä—ñ–π", "–±) –ú–∞—Ä—Å", "–≤) –ó–µ–º–ª—è", "–≥) –£—Ä–∞–Ω"},
            '–±', 100
        },
        {
            "–Ø–∫–∞ –≤–∏—Å–æ—Ç–∞ –≥–æ—Ä–∏ –ï–≤–µ—Ä–µ—Å—Ç?",
            {"–∞) 8848 –º", "–±) 5000 –º", "–≤) 10000 –º", "–≥) 7200 –º"},
            '–∞', 200
        },
        {
            "–•—Ç–æ –∞–≤—Ç–æ—Ä —Ä–æ–º–∞–Ω—É '–ö–æ–±–∑–∞—Ä'?",
            {"–∞) –Ü–≤–∞–Ω –§—Ä–∞–Ω–∫–æ", "–±) –õ–µ—Å—è –£–∫—Ä–∞—ó–Ω–∫–∞", "–≤) –¢–∞—Ä–∞—Å –®–µ–≤—á–µ–Ω–∫–æ", "–≥) –ú–∏–∫–æ–ª–∞ –ì–æ–≥–æ–ª—å"},
            '–≤', 300
        },
        {
            "–Ø–∫–∏–π –æ–∫–µ–∞–Ω –Ω–∞–π–±—ñ–ª—å—à–∏–π —É —Å–≤—ñ—Ç—ñ?",
            {"–∞) –ê—Ç–ª–∞–Ω—Ç–∏—á–Ω–∏–π", "–±) –Ü–Ω–¥—ñ–π—Å—å–∫–∏–π", "–≤) –ü—ñ–≤–Ω—ñ—á–Ω–∏–π –õ—å–æ–¥–æ–≤–∏—Ç–∏–π", "–≥) –¢–∏—Ö–∏–π"},
            '–≥', 400
        },
        {
            "–°–∫—ñ–ª—å–∫–∏ –∫–æ–Ω—Ç–∏–Ω–µ–Ω—Ç—ñ–≤ –Ω–∞ –ó–µ–º–ª—ñ?",
            {"–∞) 5", "–±) 6", "–≤) 7", "–≥) 8"},
            '–≤', 500
        }
    };

    int total = 0;
    int numQuestions = sizeof(quiz) / sizeof(quiz[0]);

    cout << "==============================\n";
    cout << "     –ì–†–ê: –Ø–∫ —Å—Ç–∞—Ç–∏ –º—ñ–ª—å–π–æ–Ω–µ—Ä–æ–º\n";
    cout << "==============================\n\n";

    for (int i = 0; i < numQuestions; i++) {
        cout << "–ü–∏—Ç–∞–Ω–Ω—è " << i + 1 << ": " << quiz[i].text << endl;
        for (int j = 0; j < 4; j++)
            cout << quiz[i].answers[j] << endl;

        cout << "–û–±–µ—Ä—ñ—Ç—å –ø—Ä–∞–≤–∏–ª—å–Ω—É –≤—ñ–¥–ø–æ–≤—ñ–¥—å: ";
        char answer;
        cin >> answer;

        if (answer == quiz[i].correct) {
            total += quiz[i].reward;
            cout << "‚úÖ –ü—Ä–∞–≤–∏–ª—å–Ω–æ! –í–∏ –∑–∞—Ä–æ–±–∏–ª–∏ " << quiz[i].reward
                 << " –æ—á–æ–∫. –ó–∞–≥–∞–ª–æ–º: " << total << endl << endl;
        } else {
            cout << "‚ùå –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ! –í–∏ –ø—Ä–æ–≥—Ä–∞–ª–∏. –í–∞—à –≤–∏–≥—Ä–∞—à: " << total << " –æ—á–æ–∫.\n";
            break;
        }
    }

    if (total == quiz[numQuestions - 1].reward * numQuestions)
        cout << "üéâ –í—ñ—Ç–∞—î–º–æ! –í–∏ —Å—Ç–∞–ª–∏ –º—ñ–ª—å–π–æ–Ω–µ—Ä–æ–º!\n";

    cout << "\n–î—è–∫—É—î–º–æ –∑–∞ –≥—Ä—É!\n";
    return 0;
}
